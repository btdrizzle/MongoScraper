<div class="container col-10">
        <h2 class="text-center display-6">Your Saved Articles</h2>
        {{#each articles as |article|}}
        <div class="article container mb-3">
            <div class="pt-3 pb-3 mb-3">
            <button type="button" data-id={{article._id}} class="delete btn btn-large">Delete Article</button>
            <h4>{{article.title}}</h4>
            <h6>{{article.link}}</h6>
            <button type="button" data-title="{{article.title}}" data-link={{article.link}} class="save-article btn btn-outline-secondary btn-block">Save Article</button>
            </div>
        </div>
        {{/each}}
</div>